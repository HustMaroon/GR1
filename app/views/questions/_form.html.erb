<div id="question-form" class="collapse">
  <%=form_for(Question.new) do |f|%>
    <%=f.label :content, "Content"%>
    <%=f.text_field :content, {class: 'form-control'} %>
    <%=f.fields_for :answers, Answer.new do |ans|%>
      <%=render 'answer_fields', f: ans%>
    <%end%>
    <%=f.submit "Add question", class:"btn btn-primary"%>
  <%end%>
</div>
 