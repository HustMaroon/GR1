<%=render 'teachers/sidebar'%>
<div class="main">
  <%=render 'layouts/header', notifications: current_user.notifications.where(read: false)%>
  <div class="main-content">
    <h1><%=@sclass.subject.name%>-<%=@sclass.sclass_id%></h1>
    <table class="table table-hover" style="width:100%" border="1" margin="center">
      <tr>
        <td><b>Name</b></td>
        <td><b>Student_id</b></td>
        <td><b>Missed</b></td>
        <td><b>Missing</b></td>
      </tr>
  <%=form_tag sclass_rollup_path(@sclass) do%>
      <%@students.each do |s|%>
          <%=render 'student', student: s%>
      <%end%>
  </table>
  <%=submit_tag "Submit", class: "btn btn-primary"%>
  <%end%>
  </div>
  <footer>
  </footer>
</div>