<%= render current_user.class == Teacher ? 'teachers/sidebar' : 'students/sidebar' %>
<div class="main">
  <%=render 'layouts/header', notifications: current_user.notifications.where(read: false)%>
  <div class="main-content">
		<div class="panel">
			<div class="panel-heading">
				<h3 class="panel-title">Danh sách vắng mặt lớp <%= @sclass.subject.name%> - <%=@sclass.sclass_id%></h3>
			</div>
			<div class="panel-body">
			<table class="table table-hover" style="width:100%" border="1" margin="center">
			 <tr>
				  <td><b>Ngày</b></td>
				  <td><b>Họ tên</b></td>
			  	<td><b>MSSV</b></td>
				</tr>
					<%@missed_logs.each do |missed_log|%>
				 		<%=render missed_log%>
					<%end%>
			</table>
					<%=will_paginate @missed_logs%>
			</div>
		</div>
  </div>
  <footer>
    
  </footer>
</div>