<%= render current_user.class == Teacher ? 'teachers/home_sidebar' : 'students/home_sidebar' %>

<div class="main">
  <%=render 'layouts/header', notifications: current_user.notifications.where(read: false)%>
  <div class="main-content">
    <div class="panel">
              <div class="panel-heading">
                <h3 class="panel-title">Tất cả thông báo</h3>
              </div>
              <div class="panel-body">
                <table class="table table-condensed">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Nội dung</th>
                      <th>Thời gian</th>
                    </tr>
                  </thead>
                  <tbody>
                  <% @notifications.order(created_at: :desc).each_with_index do |noti, index|%>
                    <tr>
                      <td><%= index +1%></td>
                      <td><%= link_to noti.content, noti.link+"?noti_id=#{noti.id}"%></td>
                      <td><%= noti.created_at%></td>
                    </tr>
                  <%end%>
                  <%= will_paginate @notification%>
                  </tbody>
                </table>
              </div>
            </div>
  </div>
  <footer>
  </footer>
</div>