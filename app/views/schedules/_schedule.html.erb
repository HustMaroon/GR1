<tr class=<%=schedule.date == Date.today ? "today-row" : "" %>>
	<td><%=schedule.date%></td>
	<td><%=start_lesson_to_time(schedule.first_lesson)%></td>
	<td><%=end_lesson_to_time(schedule.last_lesson)%></td>
	<td>
	<div id="schedule-cell-<%=schedule.id%>">
		<span id="schedule-content-<%=schedule.id%>"><%=schedule.content%></span>
		<%if(current_user.class == Teacher)%>
			<%=link_to '#' do%>
				<i class="fa fa-pencil-square-o" id= "schedule-content-<%=schedule.id%>" aria-hidden="true" style="float: right;"></i>
			<%end%>
		<%end%>
	</div>
	<%if(current_user.class == Teacher)%>
		<div id="schedule-form-<%=schedule.id%>" class="hidden">
			<%=form_for schedule, url: sclass_schedule_path(schedule.sclass, schedule), remote: true do |f|%>
				<%=f.text_area :content, class: 'form-control'%>
				<%=f.submit 'Update', class: 'btn btn-primary'%>
			<%end%>
		</div>
	<%end%>
	</td>
	<td><%= link_to 'Điểm danh', sclass_schedule_rollup_path(sclass, schedule_id: schedule.id), class: 'btn btn-primary' if current_user.class == Teacher %></td>
<tr>