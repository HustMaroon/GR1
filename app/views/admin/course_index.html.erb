<div class="container">
<%= render 'header' %>
<ul class="nav nav-tabs" role="tablist">
  <li><%= link_to 'Sinh viên', admin_students_path %></li>
  <li><%= link_to 'Giảng viên', admin_teachers_path %></li>
  <li class="active"><%= link_to "Học phần", admin_courses_path%></li>
  <li><%= link_to "Lớp học", admin_classes_path%></li>
  </ul>
  	<h1>Quản lý học phần</h1>
  	  	<%= form_tag admin_courses_path, :method => 'get' do %>
  		<p>
    	<%= text_field_tag :search, params[:search],class: 'form-control', placeholder: "Tin học đại cương, ITC1100..." %>
    	<%= submit_tag "Tìm kiếm", :name => nil, class:'btn btn-primary' %>
  		</p>
		<% end %>
		<table class="table table-hover" style="width:100%" border="1" margin="center">
		<tr>
		  <td><b>Tên học phần</b></td>
 		  <td><b>Mã học phần</b></td>
      <td><b>Trọng số</b></td>
 		  <td><b>Công cụ</b></td>
 		</tr>
	<%@courses.each do |s|%>
	 <%=render s%>
	<%end%>
		</table>
    <%=will_paginate @courses%>
		<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#courseModal">
      Thêm học phần
    </button> hoặc
    <%=render 'sheet_form', path: admin_upload_courses_path%>
</div>
<%= render 'courses/form'%>