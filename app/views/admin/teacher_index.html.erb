<div class="container">
<%= render 'header' %>
<ul class="nav nav-tabs" role="tablist">
  <li><%= link_to 'Sinh viên', admin_students_path %></li>
  <li class="active"><%= link_to 'Giảng viên', admin_teachers_path %></li>
  <li><%= link_to "Học phần", admin_courses_path%></li>
  <li><%= link_to "Lớp học", admin_classes_path%></li>
  </ul>
  	<h1>Quản lý giảng viên</h1>
    <%= form_tag admin_teachers_path, :method => 'get' do %>
  		<p>
    	<%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'teacher_0@hust.edu.vn, Phạm Văn Công...' %>
    	<%= submit_tag "Tìm kiếm", :name => nil, class:'btn btn-primary' %>
  		</p>
		<% end %>
		<table class="table table-hover" style="width:100%" border="1" margin="center">
		<tr>
		  <td><b>Họ tên</b></td>
 		  <td><b>Email</b></td>
 		  <td><b>Các lớp học</b></td>
 		  <td><b>Công cụ</b></td>
 		</tr>
	<%@teachers.each do |t|%>
	 <%=render t%>
	<%end%>
		</table>
    <%=will_paginate @teachers%>
	<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#teacherModal">Thêm giảng viên</button> or <%=render 'sheet_form', path: admin_upload_teachers_path%>
</div>
<%=render 'teachers/form' %>