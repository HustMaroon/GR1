<%=render 'teachers/sidebar'%>
<div class="main">
  <%=render 'layouts/header', notifications: current_user.notifications.where(read: false)%>
  <div class="main-content">
    <h1><%=@group.name%></h1>
      <table class="table table-hover" style="width:100%" border="1" margin="center">
        <tr>
          <td><b>Sinh viên</b></td>
          <td><b>Đề tài/Bài tập lớn</b></td>
          <td><b>Báo cáo</b></td>
          <td><b>Điểm</b></td>
        </tr>
        <tr>
          <td>
              <%@group.students.each_with_index do |student,index| %>
                <%= render 'group_member', student: student, index: index %>
              <%end%>
          </td>
          <td><%= @group.topic%></td>
          <td><%= @group.report%></td>
          <td>
            <%=form_tag sclass_group_update_group_point_path(@sclass, @group) do %>
              <%= text_field_tag :point, @group.point %>
              <%= submit_tag 'Cập nhật', class: 'btn btn-primary' %>
            <%end%>
          </td>
        </tr>
     </table>
  </div>
  <footer>
  </footer>
</div>